{
  // Editor
  "editor.formatOnSave": true,
  // Rust
  "rust-analyzer.cargo.extraEnv": {
    "SKIP_WASM_BUILD": "1"
  },
  "rust-analyzer.check.extraEnv": {
    "SKIP_WASM_BUILD": "1"
  },
  "rust-analyzer.cargo.features": ["runtime-benchmarks"],
  "coverage-gutters.coverageFileNames": ["target/cov.xml"],
  // Spell checker
  "cSpell.words": [
    "buildx",
    "codegen",
    "devcontainers",
    "irongut",
    "jwalton",
    "nocapture",
    "presign",
    "println",
    "subxt",
    "Swatinem",
    "wbuild"
  ]
}
